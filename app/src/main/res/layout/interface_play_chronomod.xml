<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewInterface"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chronoMetre"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.10">

        <Button
            android:id="@+id/buttonVictoire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="Win - ChronoMod"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buttonRandom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="randomPicture()"
            android:text="Random"
            android:layout_marginBottom="48dp"
            android:layout_above="@+id/chronoMetre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewCountDown"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/buttonVictoire"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:text="TextView" />

    </RelativeLayout>

</LinearLayout>
